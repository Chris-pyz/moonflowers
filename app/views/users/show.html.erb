<h1>Bienvenue <%= @user.nickname %></h1>


<div class="show-user-card">
    <li> <%= @user.nickname %></li>
    <li>Description : <%= @user.self_description %></li>
    <%= link_to "home", root_path %>
</div>

<div class="card-show-user_activites">
        <div class="activities-description"><p> description action</p></div>
    <div class="user-activities-historic">
      <p><u>Mes actions </u></p>

      <% @user.activities.each do |activity| %>
        <p> <%= activity.latitude %></p>
        <p> <%= activity.longitude %></p>
        <% if activity.waste %>
            <p> <%= activity.waste.quantity %></p>
            <p> <%= activity.waste.material %></p>
          <% if activity.user == current_user %>
              <%= link_to 'Modifier', edit_activity_path(activity) %>
          <% end %>
        <% end %>

      <% if activity.user == current_user %>
          <%= link_to 'Supprimer', activity_path(activity), method: :delete, data: { confirm: 'Etes vous sÃ»r de vouloir supprimer cette action?' } %>
        <% end %>

        <div class="like">
          <div class="heart">
           <%= link_to activity_likes_path(activity), method: :create do %>
            <i class="far fa-heart" ></i>
            <% end %>
          </div>

          <div class="like-count">
            <%= activity.likes.count  %>
          </div>
        </div>

      <hr>
      <% end %>

    </div>
</div>
