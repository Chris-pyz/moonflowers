
<div class="form-container">

  <h2>Détails de la collecte</h2>

  <div class=“form-activities”>
    <%= simple_form_for (@activity) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= f.input :latitude %>
      <%= f.input :longitude %>



          <%= f.simple_fields_for Waste.new do |waste| %>
            <div class="form-waste">
              <button class="btn btn-primary btn-waste" type="button" data-toggle="collapse" data-target="#material01" aria-expanded="false" aria-controls="material01"><i class="fas fa-wine-bottle"></i></button><button class="btn btn-primary btn-waste" type="button" data-toggle="collapse" data-target="#material02" aria-expanded="false" aria-controls="material02"><img width="16" height="16" src="https://image.flaticon.com/icons/png/512/3134/3134217.png" alt="boîte en carton Icône gratuit" title="boîte en carton Icône gratuit" class="loaded"></button><button class="btn btn-primary btn-waste" type="button" data-toggle="collapse" data-target="#material03" aria-expanded="false" aria-controls="material03"><img width="16" height="16" src="https://image.flaticon.com/icons/png/512/2907/2907404.png" alt="Plastic bottle free icon" title="Plastic bottle free icon" class="loaded"></button><button class="btn btn-primary btn-waste" type="button" data-toggle="collapse" data-target="#material04" aria-expanded="false" aria-controls="material04">métal</button><button class="btn btn-primary btn-waste" type="button" data-toggle="collapse" data-target="#material05" aria-expanded="false" aria-controls="material04">divers</button>
            </div>
          <% end %>




          <div class="d-flex justify-content-center">
            <div class="col-waste">
              <div class="collapse multi-collapse" id="material01">
                <div class="card card-body card-waste">
                  <input name="verre" type="number" class="input-waste">
                </div>
              </div>
            </div>
            <div class="col-waste">
              <div class="collapse multi-collapse" id="material02">
                <div class="card card-body card-waste">
                  <input name="papier" type="number" class="input-waste">
                </div>
              </div>
            </div>
            <div class="col-waste">
              <div class="collapse multi-collapse" id="material03">
                <div class="card card-body card-waste">
                  <input name="plastique" type="number" class="input-waste">
                </div>
              </div>
            </div>
            <div class="col-waste">
              <div class="collapse multi-collapse" id="material04">
                <div class="card card-body card-waste">
                  <input name="metal" type="number" class="input-waste">
                </div>
              </div>
            </div>
            <div class="col-waste">
              <div class="collapse multi-collapse" id="material05">
                <div class="card card-body card-waste">
                  <input name="divers" type="number" class="input-waste">
                </div>
              </div>
            </div>
          </div>


      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>
